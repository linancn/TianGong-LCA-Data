			<common:synonyms xml:lang="en">Cleaning agents; Hard-surface cleaners; Detergents; Surfactants</common:synonyms>
			<common:synonyms xml:lang="zh">Cleaning agents; Hard-surface cleaners; Detergents; Surfactants</common:synonyms>
