			<common:synonyms xml:lang="en">Chloroethylene; VC; VCM; Chloroethene; 1-Chloroethylene</common:synonyms>
			<common:synonyms xml:lang="zh">Chloroethylene; VC; VCM; Chloroethene; 1-Chloroethylene</common:synonyms>
