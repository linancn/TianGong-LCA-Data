			<common:synonyms xml:lang="en">Drilling waste; Drilled cuttings; Produced wate</common:synonyms>
			<common:synonyms xml:lang="zh">Drilling waste; Drilled cuttings; Produced wate</common:synonyms>
			<classificationInformation>
				<common:classification name="ILCD 1.1" classes="../ILCDClassification.xml">
