			<common:synonyms xml:lang="en">Recycled Concrete Aggregate; RCA; Recycled Type 1</common:synonyms>
			<common:synonyms xml:lang="zh">Recycled Concrete Aggregate; RCA; Recycled Type 1</common:synonyms>
