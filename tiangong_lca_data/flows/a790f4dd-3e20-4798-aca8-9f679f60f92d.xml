				<baseName xml:lang="en">Lithium chloride purification solution</baseName>
				<baseName xml:lang="zh">氯化锂纯化液</baseName>
			</name>
			<common:synonyms xml:lang="en">LiCl purification solution; Lithium chloride solution</common:synonyms>
			<common:synonyms xml:lang="zh">LiCl purification solution; Lithium chloride solution</common:synonyms>
			<classificationInformation>
