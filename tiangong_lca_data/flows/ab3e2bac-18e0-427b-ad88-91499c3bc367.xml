			<common:synonyms xml:lang="en">CMC; Cellulose gum; Sodium carboxymethyl cellulose; Carboxymethylcellulose; Tylose</common:synonyms>
			<common:synonyms xml:lang="zh">CMC; Cellulose gum; Sodium carboxymethyl cellulose; Carboxymethylcellulose; Tylose</common:synonyms>
