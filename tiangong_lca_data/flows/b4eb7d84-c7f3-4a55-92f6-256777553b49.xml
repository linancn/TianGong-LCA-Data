			<common:synonyms xml:lang="en">Thermoelectric power generator; TEG; Thermoelectric generating systems</common:synonyms>
			<common:synonyms xml:lang="zh">Thermoelectric power generator; TEG; Thermoelectric generating systems</common:synonyms>
			<classificationInformation>
				<common:classification name="ILCD 1.1" classes="../ILCDClassification.xml">
					<common:class level="0">Energy carriers and technologies</common:class>
