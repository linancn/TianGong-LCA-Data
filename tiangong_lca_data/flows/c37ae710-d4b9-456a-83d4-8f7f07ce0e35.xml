				<baseName xml:lang="en">Sodium Hydrosulphite</baseName>
				<baseName xml:lang="zh">连二亚硫酸钠</baseName>
			</name>
			<common:synonyms xml:lang="en">Hydrosulfite; Sodium sulphite; Sodium sulfite</common:synonyms>
			<common:synonyms xml:lang="zh">Hydrosulfite; Sodium sulphite; Sodium sulfite</common:synonyms>
