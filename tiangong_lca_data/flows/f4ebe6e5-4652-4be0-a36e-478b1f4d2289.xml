			<common:synonyms xml:lang="en">Coal combustion residuals; CCRs; Fly ash; Bottom ash</common:synonyms>
			<common:synonyms xml:lang="zh">Coal combustion residuals; CCRs; Fly ash; Bottom ash</common:synonyms>
